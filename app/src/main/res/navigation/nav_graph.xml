<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/allNotesFragment">

    <fragment
        android:id="@+id/allNotesFragment"
        android:name="com.example.notes.AllNotesFragment"
        android:label="All Notes"
        tools:layout="@layout/fragment_all_notes">
        <action
            android:id="@+id/action_allNotesFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment" />

        <action
            android:id="@+id/action_allNotesFragment_to_addEditNoteFragment"
            app:destination="@id/addEditNoteFragment" />

    </fragment>


    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.example.notes.NoteDetailFragment"
        android:label="Note Detail"
        tools:layout="@layout/fragment_note_detail">
        <argument
            android:name="noteId"
            app:argType="long"
            android:defaultValue="-1L"/>
    </fragment>

    <fragment
        android:id="@+id/addEditNoteFragment"
        android:name="com.example.notes.AddEditNoteFragment"
        android:label="Add/Edit Note"
        tools:layout="@layout/fragment_add_edit_note">
        <argument
            android:name="noteId"
            app:argType="long"
            android:defaultValue="-1L"/>
    </fragment>


</navigation>